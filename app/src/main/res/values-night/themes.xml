<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. Base application theme for NIGHT mode -->
    <style name="Theme.ReparacionesCeti" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ... (your night theme colors for primary, secondary, etc.) ... -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_warning</item>
        <item name="colorSecondaryVariant">@color/orange_secondary</item>
        <item name="colorOnSecondary">@color/gray_background</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Dark theme, light icons -->
    </style>

    <!-- 2. Specific NoActionBar theme for Login/Register for NIGHT mode -->
    <style name="Theme.ReparacionesCeti.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... (your night theme colors for primary, secondary for NoActionBar screens) ... -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_warning</item>
        <item name="colorSecondaryVariant">@color/orange_secondary</item>
        <item name="colorOnSecondary">@color/gray_background</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- Dark theme, light icons -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item> <!-- Dark theme, light icons -->
    </style>

</resources>